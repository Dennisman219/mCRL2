include(GetPrerequisites)
if(WIN32)
  string(REPLACE "$(Configuration)" ${CONFIGURATION} TARGET_LOCATION @TARGET_LOCATION@)
  get_filename_component(TARGET_PATH ${TARGET_LOCATION} PATH)
  get_prerequisites(${TARGET_LOCATION} LIBRARIES 1 1 "@executable_path" @DIRS@)
  foreach(LIB ${LIBRARIES})
    gp_resolve_item("" ${LIB} "@TARGET_LOCATION@" "@DIRS@" LIB_PATH)
    execute_process(COMMAND ${CMAKE_COMMAND} -E copy_if_different ${LIB_PATH} ${TARGET_PATH})
  endforeach()
endif()
